set page.title "NML test page";
set page.style "";

declare comp "https://mr9madness.github.io/JLML/samples/components/";

declare NML "https://mr9madness.github.io/JLML/samples/pack.jlml";
declare NMLloose "https://mr9madness.github.io/JLML/samples/loose/";

{
	nav: using nav from NML;
//	nav: using nav from NMLloose;
	tags: "container";

	image: {
		source: {
			src: "https://mr9madness.github.io/NML/samples/img/img_food.jpg";
		}
		source: when page.width < 600 {
			src: "https://mr9madness.github.io/NML/samples/img/img_girl.jpg";
		}
		source: when page.width < 1000 {
			src: "https://mr9madness.github.io/NML/samples/img/img_car.jpg";
		}
		description: {
			text: "Shows a car when on a screen thats under 1000 pixels, a girl when its under 600, and otherwise food";
		}
	}

	form: {
//		tags: when page.width > 900 then "container" else "container-fluid";

		input:
		{
			tags: "form-control";
			type: "text";
			name: "testInput";
			placeholder: "Placeholder Value";
			text: "Default Value";

			label:
			{
				tags: "col-form";
				text: parent.text;
			}

			description: {
				tags: "form-text text-muted";
				text: "Help text";
			}
		}
		select: {
			values: ("first option", "second option", "show secret option 1", "show secret option 2");
//			othervalues: ("secret option 1", "secret option 2");

			option: {
				value: "top action";
			}

			option: for value in values {
				value: value;
			}
//			option: for value in othervalues
//				when value == $("show ", value) {
//				value: value;
//			}
		}
		input: using input from comp
		{
			tags: $("form-row", "horizontal");
			name: "testInput";
			text: "imported input";
		}
		button: {
			type: "submit";
			tags: "btn btn-primary";
			text: "Submit";
		}
	}
}
